{
  "compilerOptions": {
    "outDir": "./build/types",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES3",
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": [
      "es2016",
      "DOM"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src/lib",
    "types"
  ],
  "exclude": [
    "./node_modules/@types/node",
    "./node_modules/@fermuch/telematree"
  ]
}